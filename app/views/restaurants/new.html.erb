<h1>Adding a new restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :category, collection: %w[chinese italian japanese french belgian] %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.button :submit %>
<% end %>
<%= link_to '< back', restaurants_path, class: 'btn btn-primary' %>
