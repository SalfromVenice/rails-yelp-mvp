<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.category %></h2>
<ul>
  <li>You can find us at: <%= @restaurant.address %></li>
  <li>Give us a call at: <%= @restaurant.phone_number %></li>
  <li><%= link_to 'Rate us', new_restaurant_review_path(@restaurant) %></li>
</ul>
<br>
<h3>Reviews</h3>
<% @restaurant.reviews.each do |rev| %>
  <p><%= '⭐️' *  rev.rating %></p>
  <p><%= rev.content %></p>
  <% end %>

<%= link_to '< back', restaurants_path, class: 'btn btn-primary' %>
